{
    "name": "a-d-w-s/cakephp-utils",
    "description": "PHP Cake utils",
    "license": "MIT",
    "type": "cakephp-plugin",
    "homepage": "https://github.com/a-d-w-s/cakephp-utils",
    "support": {
        "source":"https://github.com/a-d-w-s/cakephp-utils",
        "issues":"https://github.com/a-d-w-s/cakephp-utils/issues"
    },
    "keywords": [
        "php", "phpcake", "glide"
    ],
    "authors": [
        {
            "name": "Jan Brabec",
            "role": "Author",
            "email": "info@adws.cz"
        }
    ],
    "require": {
        "ext-exif": "*",
        "ext-gd": "*",
        "php": ">=8.2",
        "league/glide": "^3.0",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.1 || ^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "cakephp/cakephp": "^5.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10 || ^11 || ^12",
        "cakephp/cakephp-codesniffer": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "ADWS\\Utils\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ADWS\\Utils\\Test\\": "tests",
            "TestApp\\": "tests/test_app/src"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "analyse": "phpstan analyse",
        "cs-check": "phpcs --colors -p",
        "cs-fix": "phpcbf --colors -p",
        "test": "phpunit --colors=always",
        "check": [
            "@analyse",
            "@test",
            "@cs-check"
        ]
    }
}
